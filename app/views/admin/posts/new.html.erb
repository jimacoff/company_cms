<% provide :title, dashboard_title(t('add_new_post')) %>
<div class="row">
  <h1><%= t('add_new_post') %></h1>
</div>

<div class="row">

  <%= form_for @post, url: posts_path, method: :post, html: { role: 'form' } do |f| %>

    <% error_mes = @post.errors.messages %>

    <div class="form-group">
      <%= f.label :title, t('title') %>
      <%= f.text_field :title, class: 'form-control', placeholder: t('title'), require: '', autofocus: '' %>
      <%= render 'admin/shared/error_message', err_arr: error_mes[:title] %>
    </div>

    <div class="form-group">
      <input type="hidden" value="<%= post_image_path %>" id="post-image-path"></input>
      <%= f.label :content, t('content') %>
      <%= f.text_area :content, class: 'form-control', placeholder: t('content'), require: '', autofocus: '' %>
      <%= render 'admin/shared/error_message', err_arr: error_mes[:content] %>
    </div>

    <%= f.submit t('submit'), class: 'btn btn-lg btn-primary' %>
  <% end %>
</div>

<div class="background-modal">
  <div class="loading-modal">
    <div class="progress progress-striped active">
      <div class="progress-bar"  role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
      </div>
    </div>
  </div>
</div>
